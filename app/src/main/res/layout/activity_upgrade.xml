<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/upgradebg"
    tools:context="com.peter.zensleepfree.Activity.UpgradeActivity">

    <com.peter.zensleepfree.CustomView.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        font:customFont="Gotham-Book.ttf"
        android:text="Enjoy More Features"
        android:id="@+id/textView16"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/btn_upgrade_close"
        android:layout_alignBottom="@+id/btn_upgrade_close"
        android:gravity="center_vertical" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_upgrade_close"
        android:src="@drawable/icon_close"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_upgrade_confirm"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:id="@+id/imageView16"
                android:src="@drawable/noads"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp" />

            <com.peter.zensleepfree.CustomView.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                font:customFont="Gotham-Light.ttf"
                android:text="No Ads"
                android:id="@+id/textView17"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:id="@+id/imageView17"
                android:src="@drawable/morealarm"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingRight="6dp"
                android:layout_marginLeft="12dp" />

            <com.peter.zensleepfree.CustomView.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                font:customFont="Gotham-Light.ttf"
                android:text="More alarm sounds"
                android:id="@+id/textView18"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:id="@+id/imageView18"
                android:src="@drawable/customalarm"
                android:padding="10dp"
                android:layout_marginLeft="12dp" />

            <com.peter.zensleepfree.CustomView.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                font:customFont="Gotham-Light.ttf"
                android:text="Custom alarm sounds"
                android:id="@+id/textView19"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:id="@+id/imageView19"
                android:src="@drawable/customsnooze"
                android:padding="10dp"
                android:layout_marginLeft="12dp" />

            <com.peter.zensleepfree.CustomView.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                font:customFont="Gotham-Light.ttf"
                android:text="Custom snooze window"
                android:id="@+id/textView20"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:id="@+id/imageView20"
                android:src="@drawable/pleasant"
                android:padding="4dp"
                android:layout_marginLeft="12dp" />

            <com.peter.zensleepfree.CustomView.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                font:customFont="Gotham-Light.ttf"
                android:text="Dream log"
                android:id="@+id/textView21"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:id="@+id/imageView21"
                android:src="@drawable/analytics"
                android:padding="12dp"
                android:layout_marginLeft="12dp" />

            <com.peter.zensleepfree.CustomView.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                font:customFont="Gotham-Light.ttf"
                android:text="Analytics to dreams and sleep habits"
                android:id="@+id/textView22"
                android:layout_marginLeft="8dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade to Premium"
        android:textAllCaps="false"
        android:background="#dddddd"
        android:textColor="#222222"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:id="@+id/btn_upgrade_confirm"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

</RelativeLayout>
